    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
