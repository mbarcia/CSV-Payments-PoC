{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Template Configuration",
  "description": "Configuration schema for the Pipeline Template Generator",
  "type": "object",
  "properties": {
    "appName": {
      "type": "string",
      "description": "Name of the application to generate"
    },
    "basePackage": {
      "type": "string",
      "description": "Base package name for the generated Java code (e.g., com.example)",
      "pattern": "^[a-z][a-z0-9_]*(\\.[a-z0-9_]+)*$"
    },
    "steps": {
      "type": "array",
      "description": "List of pipeline steps to generate",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the step (e.g., Process Customer)"
          },
          "cardinality": {
            "type": "string",
            "description": "Cardinality of the step",
            "enum": ["ONE_TO_ONE", "EXPANSION", "REDUCTION", "SIDE_EFFECT"]
          },
          "inputTypeName": {
            "type": "string",
            "description": "Name of the input type (plural if reduction)"
          },
          "inputFields": {
            "type": "array",
            "description": "List of fields in the input type",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the field"
                },
                "type": {
                  "type": "string",
                  "description": "Java type of the field",
                  "anyOf": [
                    {
                      "enum": ["String", "Integer", "Long", "Double", "Boolean", "UUID", "BigDecimal", "Currency", "Path", "LocalDateTime", "LocalDate", "OffsetDateTime", "ZonedDateTime", "Instant", "Duration", "Period", "URI", "URL", "File", "BigInteger", "AtomicInteger", "AtomicLong", "List<String>"]
                    },
                    {
                      "type": "string",
                      "pattern": "^Map<.*?, .+>$"
                    }
                  ]
                },
                "protoType": {
                  "type": "string",
                  "description": "Protobuf type of the field",
                  "anyOf": [
                    {
                      "enum": ["string", "int32", "int64", "double", "bool"]
                    },
                    {
                      "type": "string",
                      "pattern": "^map<.*?, .+>$"
                    }
                  ]
                }
              },
              "required": ["name", "type", "protoType"]
            }
          },
          "outputTypeName": {
            "type": "string",
            "description": "Name of the output type (plural if expansion)"
          },
          "outputFields": {
            "type": "array",
            "description": "List of fields in the output type",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the field"
                },
                "type": {
                  "type": "string",
                  "description": "Java type of the field",
                  "anyOf": [
                    {
                      "enum": ["String", "Integer", "Long", "Double", "Boolean", "UUID", "BigDecimal", "Currency", "Path", "LocalDateTime", "LocalDate", "OffsetDateTime", "ZonedDateTime", "Instant", "Duration", "Period", "URI", "URL", "File", "BigInteger", "AtomicInteger", "AtomicLong", "List<String>"]
                    },
                    {
                      "type": "string",
                      "pattern": "^Map<.*?, .+>$"
                    }
                  ]
                },
                "protoType": {
                  "type": "string",
                  "description": "Protobuf type of the field",
                  "anyOf": [
                    {
                      "enum": ["string", "int32", "int64", "double", "bool"]
                    },
                    {
                      "type": "string",
                      "pattern": "^map<.*?, .+>$"
                    }
                  ]
                }
              },
              "required": ["name", "type", "protoType"]
            }
          },
          "batchSize": {
            "type": "integer",
            "description": "Maximum number of items to collect in a batch before processing begins (default: 10). For REDUCTION steps, set this to a value larger than the expected number of related items to ensure they are processed together.",
            "minimum": 1,
            "default": 10
          },
          "batchTimeoutMs": {
            "type": "integer",
            "description": "Maximum time (in milliseconds) to wait for additional items to accumulate in a batch (default: 1000ms). Even if the batch size hasn't been reached, processing will begin after this timeout expires.",
            "minimum": 1,
            "default": 1000
          },
          "parallel": {
            "type": "boolean",
            "description": "Whether to process items/batches concurrently (default: false)",
            "default": false
          }
        },
        "required": ["name", "cardinality", "inputTypeName", "inputFields", "outputTypeName", "outputFields"]
      }
    }
  },
  "required": ["appName", "basePackage", "steps"]
}