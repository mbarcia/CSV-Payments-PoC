{
  \"$schema\": \"http://json-schema.org/draft-07/schema#\",\n  \"title\": \"Pipeline Template Configuration\",\n  \"description\": \"Configuration schema for the Pipeline Template Generator\",\n  \"type\": \"object\",\n  \"properties\": {\n    \"appName\": {\n      \"type\": \"string\",\n      \"description\": \"Name of the application to generate\"\n    },\n    \"basePackage\": {\n      \"type\": \"string\",\n      \"description\": \"Base package name for the generated Java code (e.g., io.github.mbarcia)\",\n      \"pattern\": \"^[a-z][a-z0-9_]*(\\\\.[a-z0-9_]+)*$\"\n    },\n    \"steps\": {\n      \"type\": \"array\",\n      \"description\": \"List of pipeline steps to generate\",\n      \"items\": {\n        \"type\": \"object\",\n        \"properties\": {\n          \"name\": {\n            \"type\": \"string\",\n            \"description\": \"Name of the step (e.g., Process Customer)\"\n          },\n          \"cardinality\": {\n            \"type\": \"string\",\n            \"description\": \"Cardinality of the step\",\n            \"enum\": [\"ONE_TO_ONE\", \"EXPANSION\", \"REDUCTION\", \"SIDE_EFFECT\"]\n          },\n          \"inputTypeName\": {\n            \"type\": \"string\",\n            \"description\": \"Name of the input type (plural if reduction)\"\n          },\n          \"inputFields\": {\n            \"type\": \"array\",\n            \"description\": \"List of fields in the input type\",\n            \"items\": {\n              \"type\": \"object\",\n              \"properties\": {\n                \"name\": {\n                  \"type\": \"string\",\n                  \"description\": \"Name of the field\"\n                },\n                \"type\": {\n                  \"type\": \"string\",\n                  \"description\": \"Java type of the field\",\n                  \"enum\": [\"String\", \"Integer\", \"Long\", \"Double\", \"Boolean\", \"UUID\", \"BigDecimal\", \"Currency\", \"Path\"]\n                },\n                \"protoType\": {\n                  \"type\": \"string\",\n                  \"description\": \"Protobuf type of the field\",\n                  \"enum\": [\"string\", \"int32\", \"int64\", \"double\", \"bool\"]\n                }\n              },\n              \"required\": [\"name\", \"type\", \"protoType\"]\n            }\n          },\n          \"outputTypeName\": {\n            \"type\": \"string\",\n            \"description\": \"Name of the output type (plural if expansion)\"\n          },\n          \"outputFields\": {\n            \"type\": \"array\",\n            \"description\": \"List of fields in the output type\",\n            \"items\": {\n              \"type\": \"object\",\n              \"properties\": {\n                \"name\": {\n                  \"type\": \"string\",\n                  \"description\": \"Name of the field\"\n                },\n                \"type\": {\n                  \"type\": \"string\",\n                  \"description\": \"Java type of the field\",\n                  \"enum\": [\"String\", \"Integer\", \"Long\", \"Double\", \"Boolean\", \"UUID\", \"BigDecimal\", \"Currency\", \"Path\"]\n                },\n                \"protoType\": {\n                  \"type\": \"string\",\n                  \"description\": \"Protobuf type of the field\",\n                  \"enum\": [\"string\", \"int32\", \"int64\", \"double\", \"bool\"]\n                }\n              },\n              \"required\": [\"name\", \"type\", \"protoType\"]\n            }\n          }\n        },\n        \"required\": [\"name\", \"cardinality\", \"inputTypeName\", \"inputFields\", \"outputTypeName\", \"outputFields\"]\n      }\n    }\n  },\n  \"required\": [\"appName\", \"basePackage\", \"steps\"]\n}