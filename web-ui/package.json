{
  "name": "pipeline-template-generator-ui",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite dev",
    "update-templates": "node update-templates.js",
    "build": "npm run update-templates && node --max-old-space-size=4096 node_modules/vite/bin/vite.js build",
    "build:cloudflare": "npm run update-templates && NODE_OPTIONS='--max-old-space-size=2048 --max-semi-space-size=128' sh -c 'vite build && node -e \"console.log(process.memoryUsage())\"; exit 0'",
    "build:static": "npm run update-templates && node --max-old-space-size=2048 node_modules/vite/bin/vite.js build && exit 0",
    "preview": "node --max-old-space-size=2048 node_modules/vite/bin/vite.js preview",
    "preview:cloudflare": "node --max-old-space-size=2048 node_modules/vite/bin/vite.js preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.3",
    "terser": "^5.44.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "type": "module",
  "dependencies": {
    "file-saver": "^2.0.5",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1"
  }
}
