global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
  
  - job_name: 'pipeline-services'
    metrics_path: '/q/metrics'
    static_configs:
      - targets: ['input-csv-file-processing-svc:8444', 'payments-processing-svc:8445', 'payment-status-svc:8446', 'output-csv-file-processing-svc:8447', 'orchestrator-svc:8443']
    scrape_interval: 5s